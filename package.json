{
  "scripts": {
    "start": "npm-run-all --parallel css js eleventy browsersync",
    "eleventy": "eleventy --watch",
    "debug": "set DEBUG=* & eleventy",
    "js": "esbuild app/assets/js/main.js --bundle --watch --outfile=_site/static/js/main.js",
    "css": "postcss app/assets/css/main.css --o _site/static/css/main.css --watch",
    "build": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production tailwindcss -i app/assets/css/main.css -o _site/static/css/main.css",
    "browsersync": "browser-sync start --server _site --files _site --port 8080 --no-notify --no-open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@tailwindcss/typography": "^0.5.8",
    "browser-sync": "^2.11.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "esbuild": "^0.16.4",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.20"
  }
}
