{
  "scripts": {
    "dev": "npm-run-all --parallel css js eleventy browsersync",
    "rspack": "rspack build --watch --config rspack.config.js",
    "eleventy": "eleventy --watch",
    "debug": "set DEBUG=* & eleventy",
    "js": "esbuild app/assets/js/main.js --bundle --watch --outfile=_site/static/js/main.js",
    "css": "node esbuild.config.js --watch",
    "build": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production node esbuild.config.js",
    "browsersync": "browser-sync start --server _site --files _site --port 8080 --no-notify --no-open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@babel/preset-env": "^7.28.3",
    "@rspack/cli": "^1.5.5",
    "@rspack/core": "^1.5.5",
    "@splidejs/splide": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "browser-sync": "^3.0.4",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "js-yaml": "^4.1.0",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "postcss-advanced-variables": "^5.0.0",
    "postcss-atroot": "^0.2.4",
    "postcss-cli": "^11.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-loader": "^8.2.0",
    "postcss-map-get": "^0.3.0",
    "postcss-property-lookup": "^3.0.0",
    "postcss-rem": "^3.0.0",
    "postcss-scss": "^4.0.9",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@glidejs/glide": "^3.7.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "eleventy-plugin-page-assets": "github:maxboeck/eleventy-plugin-page-assets",
    "lodash": "^4.17.21",
    "macy": "^2.5.1",
    "postcss": "^8.5.6",
    "slugify": "^1.6.6"
  }
}
